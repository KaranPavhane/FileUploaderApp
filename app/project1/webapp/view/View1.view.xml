<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page id="page" title="Category Value Help">
        <VBox justifyContent="Center" alignItems="Center" width="100%" height="300px">
            <l:VerticalLayout class="sapUiContentPadding" width="400px">
                <Label text="Category ID" labelFor="categoryInput" />
                <Input
                    id="categoryInput"
                    placeholder="Select Category ID"
                    showValueHelp="true"
                    valueHelpRequest=".onValueHelpRequest"
                    showSuggestion="true"
                    suggestionItems="{obj>/CategoryCollection}"
                >
                    <suggestionItems>
                        <core:Item text="{obj>CategoryID}" />
                    </suggestionItems>
                </Input>
               
            </l:VerticalLayout>
             <Button text="Submit" type="Success" press="onSubmitPress"/>
            
        </VBox>
    </Page>
</mvc:View>
